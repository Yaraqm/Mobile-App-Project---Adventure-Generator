<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/rewardIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/reward_icon_bg"
            android:contentDescription="@string/cd_reward_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="14dp">

            <TextView
                android:id="@+id/rewardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:text="@string/reward_title_placeholder"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/rewardDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="#F2FFFFFF"
                android:text="@string/reward_desc_placeholder"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/pointsChip"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@color/points_chip_bg"
                app:chipIcon="@drawable/ic_profile"
                app:chipIconTint="@android:color/white"
                app:checkedIconVisible="false"
                app:rippleColor="@color/points_chip_ripple" />

        </LinearLayout>

        <TextView
            android:id="@+id/rewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="0" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
