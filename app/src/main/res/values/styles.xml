<resources>

    <!-- Base application theme -->
    <style name="Theme.LocalAdventureGenerator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@android:color/holo_purple</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_bright</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NavActiveIndicatorStyle" parent="">
        <item name="android:insetLeft">8dp</item>
        <item name="android:insetRight">8dp</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="backgroundTint">@color/nav_active_bg</item>
    </style>

    <!-- *** NEW: STYLE FOR FILTER CHIPS *** -->
    <!-- This style is used by the category filter chips in the MapFragment. -->
    <style name="Widget.App.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">true</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
    </style>

</resources>
